<h1>Listing photos</h1>

<table>
  <tr>
    <th>User</th>
    <th>Name</th>
    <th>Description</th>
    <th>Taken at</th>
    <th>Longitude</th>
    <th>Latitude</th>
    <th>Direction</th>
  </tr>

<% @photos.each do |photo| %>
  <tr>
    <td><%=h photo.user %></td>
    <td><%=h photo.name %></td>
    <td><%=h photo.description %></td>
    <td><%=h photo.taken_at %></td>
    <td><%=h photo.longitude %></td>
    <td><%=h photo.latitude %></td>
    <td><%=h photo.direction %></td>
    <td><%= link_to 'Show', photo %></td>
    <td><%= link_to 'Edit', edit_photo_path(photo) %></td>
    <td><%= link_to 'Destroy', photo, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New photo', new_photo_path %>